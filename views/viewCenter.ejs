<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Autism | Center Details</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.min.css" />
    <link href="/vendor/fonts/circular-std/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="/libs/css/style.css" />
    <link
      rel="stylesheet"
      href="/vendor/fonts/fontawesome/css/fontawesome-all.css"
    />
    <style>
      .delete:hover {
        color: red;
      }

      .edit:hover {
        color: lightseagreen;
      }
    </style>
  </head>

  <body>
    <div class="dashboard-main-wrapper">
      <!-- header -->
      <div class="dashboard-header">
        <nav class="navbar navbar-expand-lg bg-white fixed-top">
          <a class="navbar-brand" href="/">Autism</a>
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
        </nav>
      </div>

      <!-- sidebar -->
      <div class="nav-left-sidebar sidebar-dark">
        <div class="menu-list">
          <nav class="navbar navbar-expand-lg navbar-light">
            <a class="d-xl-none d-lg-none" href="#">Dashboard</a>
            <button
              class="navbar-toggler"
              type="button"
              data-toggle="collapse"
              data-target="#navbarNav"
              aria-controls="navbarNav"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav flex-column">
                <li class="nav-divider">
                  Menu
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/"
                    ><i class="fa fa-fw fa-home"></i>Dashboard</a
                  >
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/users"
                    ><i class="fa fa-fw fa-users"></i>Users</a
                  >
                </li>
                <li class="nav-item">
                  <a class="nav-link active" href="/centers"
                    ><i class="fa fa-fw fa-hospital"></i>Centers</a
                  >
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/logout"
                    ><i class="fas fa-fw fa-sign-out-alt"></i>Log out</a
                  >
                </li>
              </ul>
            </div>
          </nav>
        </div>
      </div>

      <div class="dashboard-wrapper">
        <div class="container-fluid dashboard-content">
          <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
              <div class="section-block" id="image-card">
                <h3 class="section-title">Center Details</h3>
              </div>
            </div>
            <div
              class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12 col-lg-6 col-md-6 col-sm-12 col-12"
            >
              <div class="card" style="height: 600px">
                <img
                  class="img-fluid"
                  src="<%= center.image %>"
                  alt="Card image cap"
                  width="100%"
                  height="600px"
                />
              </div>
            </div>
            <div
              class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12 col-lg-6 col-md-6 col-sm-12 col-12"
            >
              <div class="card" style="height: 320px">
                <div class="card-body">
                  <form>
                    <div class="form-group">
                      <label for="inputText3" class="col-form-label"
                        >Name:</label
                      >
                      <input
                        type="text"
                        value="<%= center.name %>"
                        class="form-control"
                        readonly
                      />
                    </div>
                    <div class="form-group">
                      <label for="inputText3" class="col-form-label"
                        >Location</label
                      >
                      <input
                        type="text"
                        value="<%= center.location %>"
                        class="form-control"
                        readonly
                      />
                    </div>
                    <div class="form-group">
                      <label for="exampleFormControlTextarea1"
                        >Description:</label
                      >
                      <textarea
                        class="form-control"
                        id="exampleFormControlTextarea1"
                        rows="3"
                        readonly
                      >
<%= center.description %></textarea
                      >
                    </div>
                  </form>
                </div>
              </div>
              <div id="map" style="width:100%; height:250px;"></div>
            </div>
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
              <div class="card">
                <h5 class="card-header">List of Doctors</h5>
                <div class="card-body">
                  <div class="table-responsive">
                    <div style="margin-bottom: 10px">
                      <a
                        href="/centers/<%= center.id %>/add-doctor"
                        class="btn btn-primary btn-sm"
                        >Add New Doctor</a
                      >
                    </div>
                    <table class="table table-striped table-bordered first">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Email</th>
                          <th>Phone</th>
                          <th>Type</th>
                          <th>Manage Doctor</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if(typeof doctors != null && doctors.length > 0) { %>
                        <% doctors.forEach(doctor => { %>
                        <tr>
                          <td><%= doctor.name %></td>
                          <td><%= doctor.email %></td>
                          <td><%= doctor.phone %></td>
                          <td><%= doctor.type %></td>
                          <td>
                            <a
                              class="delete"
                              href="/centers/<%= center.id %>/<%= doctor.id %>/delete-doctor"
                              onclick="return confirm('Are you sure to delete this doctor?');"
                              ><i class="fa fa-fw fa-times"></i
                            ></a>
                            <a
                              class="edit"
                              href="/centers/<%= center.id %>/<%= doctor.id %>/edit-doctor"
                              ><i class="fa fa-fw fa-edit"></i
                            ></a>
                          </td>
                        </tr>
                        <% }); %> <% } else { %>
                        <tr>
                          <td colspan="5" class="text-center">
                            No Data Available
                          </td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- footer -->
        <div class="footer">
          <div class="container-fluid">
            <div class="row">
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                Copyright Â© 2019 Autism. All rights reserved.
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- JS Files -->
    <script src="/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="/vendor/slimscroll/jquery.slimscroll.js"></script>
    <script src="/libs/js/main-js.js"></script>
    <script>
      // Initialize and add the map
      function initMap() {
        // map settings
        let mapProp = {
          center: new google.maps.LatLng(
            "<%= center.latitude %>",
            "<%= center.logitude %>"
          ),
          zoom: 7
        };

        let map = new google.maps.Map(document.getElementById("map"), mapProp);

        var marker = new google.maps.Marker({
          position: new google.maps.LatLng(
            "<%= center.latitude %>",
            "<%= center.logitude %>"
          ),
          map: map,
          title: "<%= center.name %>"
        });
      }
    </script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAdYgE5n80X3YzZCAWIzzWOwcj-ooDfSFk&callback=initMap"></script>
  </body>
</html>
